{% extends "base.html.twig" %}

{% block body %}
<section class="section section-lg bg-default">
        <div class="container">
          <div class="tabs-custom row row-50 justify-content-center flex-lg-row-reverse text-center text-md-left" id="tabs-4">
            <div class="col-lg-4 col-xl-3">
              <h5 class="text-spacing-200 text-capitalize">Actions</h5>
              <ul class="nav list-category list-category-down-md-inline-block">

                <li>
                    <a href="{{ path('app_ingredient_edit', { 'id': ingredient.id }) }}" >
                        <i class="display-2 mr-3 mdi mdi-pencil"></i> Edit
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_ingredient_delete', { 'id': ingredient.id }) }}" >
                        <i class="display-2 mr-3 mdi mdi-delete"></i> Delete
                    </a>
                </li>
              </ul>
            </div>
            <div class="col-lg-8 col-xl-9 m-auto">

              <div class="tab-content tab-content-1">
                <div class="tab-pane fade show active" id="tabs-4-1">
                  <h4>{{ ingredient.name }}</h4>
                  {% for i in 1..ingredient.rating %}
                      <span class="mdi mdi-star"></span>
                  {% endfor %}

                  {% if ingredient.rating < 5 %}
                      {% for i in ingredient.rating+1..5 %}
                          <span class="mdi mdi-star text-gray-13"></span>
                      {% endfor %}
                  {% endif %}
                  <p class="text-spacing-50 h2 text-success mt-3 mb-5">{{ ingredient.price }} $</p>
                  <img src="{{ asset('build/images/about-1-835x418.jpg') }}" alt="" width="835" height="418"/>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
{% endblock %}